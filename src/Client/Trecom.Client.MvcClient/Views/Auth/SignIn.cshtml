@model BaseViewModel<SignInViewModel>

<!--====== Section 1 ======-->
<div class="u-s-p-y-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/">Ana Sayfa</a>
                        </li>
                        <li class="is-marked">

                            <a asp-controller="Auth" asp-action="SignIn">Giriş Yap</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">Hesabın Var Mı?</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">Yeni Müşteriyim</h1>
                            <span class="badge badge-danger">Danger</span>

                            <span class="gl-text u-s-m-b-30">Sitemizde hesap açarak daha hızlı sipariş verebilme,adresinizi kayıt edebilme ve siparişlerinizi takip edebilme özelliklerine sahip olabilirsiniz.</span>
                            <div class="u-s-m-b-15">

                                <a class="l-f-o__create-link btn--e-transparent-brand-b-2" asp-controller="Auth" asp-action="SignUp">HESAP OLUŞTUR</a>
                            </div>
                            <h1 class="gl-h1">Giriş Yap</h1>

                            <span class="gl-text u-s-m-b-30">Eğer hesabınız var ise lütfen giriş yapın.</span>
                            <form class="l-f-o__form" asp-controller="Auth" asp-action="SignIn" method="post">
                                <div class="gl-s-api">
                                    <div class="u-s-m-b-15">

                                        <button class="gl-s-api__btn gl-s-api__btn--fb" type="button">
                                            <i class="fab fa-facebook-f"></i>

                                            <span>Facebook ile Giriş Yap</span>
                                        </button>
                                    </div>
                                    <div class="u-s-m-b-15">

                                        <button class="gl-s-api__btn gl-s-api__btn--gplus" type="button">
                                            <i class="fab fa-google"></i>

                                            <span>Google ile Giriş Yap</span>
                                        </button>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="login-email">E-MAIL *</label>

                                    <input class="input-text input-text--primary-style" name="Email" type="text" placeholder="E-mail girin..." value="string">
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label">ŞİFRE *</label>

                                    <input class="input-text input-text--primary-style" name="Password" type="text" placeholder="Şifre girin..." value="string">
                                </div>

                                <div class="u-s-m-b-30">
                                    @if (Model != null && Model.Errors != null && Model.Errors.Count > 0)
                                    {
                                        foreach (var error in Model.Errors)
                                        {
                                            <span class="badge badge-danger">@error</span>
                                        }
                                    }
                                </div>
                                <div class="gl-inline">
                                    <div class="u-s-m-b-30">

                                        <button class="btn btn--e-transparent-brand-b-2" type="submit">Giriş Yap</button>
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <a class="gl-link" href="/templates/ludus-free-premium-ecommerce-template-master/htmls/lost-password.html">Şifreni mi Unuttun?</a>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">

                                    <!--====== Check Box ======-->
                                    <div class="check-box">

                                        <input checked="checked" data-val="true" name="IsRemember" type="checkbox" value="true">
                                        <div class="check-box__state check-box__state--primary">
                                            
                                            <label class="check-box__label" for="remember-me">Beni Hatırla</label>
                                        </div>
                                    </div>
                                    <!--====== End - Check Box ======-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->
