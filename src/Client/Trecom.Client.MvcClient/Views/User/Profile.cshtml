@using System.Security.Claims

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="index.html">Home</a>
                            </li>
                            <li class="is-marked">

                                <a href="dash-my-profile.html">My Account</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="dash">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-12">

                            <!--====== Dashboard Features ======-->
                            @await Component.InvokeAsync("UserDashboardSidebarProfileComponent")

                            @await Component.InvokeAsync("UserDashboardSidebarOrderComponent")
                            <!--====== End - Dashboard Features ======-->
                        </div>
                        <div class="col-lg-9 col-md-12">
                            <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                                <div class="dash__pad-2">
                                    <h1 class="dash__h1 u-s-m-b-14">Profilim</h1>

                                    <span class="dash__text u-s-m-b-30">Bütün bilgilerine bak, profilini özelleştirebilirsin.</span>
                                    <div class="row">
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8"></h2>

                                            <span class="dash__text">@User.Identity.Name</span>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">E-mail</h2>

                                        <strong class="dash__text">E-mail Dİnamik gelecek! Strongu span ile değiş!</strong>
                                            <div class="dash__link dash__link--secondary">

                                                <a href="#">Düzenle</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">Telefon</h2>

                                            <span class="dash__text">Lütfen telefon numaranızı giriniz.</span>
                                            <div class="dash__link dash__link--secondary">

                                                <a href="#">Ekle</a>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">Doğum Tarihi</h2>

                                            <span class="dash__text">30/06/2000</span>
                                        </div>
                                        <div class="col-lg-4 u-s-m-b-30">
                                            <h2 class="dash__h2 u-s-m-b-8">Cinsiyet</h2>

                                            <span class="dash__text">Erkek</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="dash__link dash__link--secondary u-s-m-b-30">

                                                <a data-modal="modal" data-modal-id="#dash-newsletter">Bültene Abone Ol</a>
                                            </div>
                                            <div class="u-s-m-b-16">

                                                <a class="dash__custom-link btn--e-transparent-brand-b-2" asp-controller="User" asp-action="EditProfile" >Profili Düzenle</a>
                                            </div>
                                            <div>

                                                <a class="dash__custom-link btn--e-brand-b-2" href="#">Şifre Değiştir</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->

